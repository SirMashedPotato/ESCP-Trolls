<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Advanced Biomes (Continued)</li>
		</mods> 
				
		<match Class="PatchOperationSequence">
			<operations>

				<!-- Savanna -->
			
				<li Class="PatchOperationAdd">
					<xpath>/Defs/BiomeDef[defName="Savanna"]/wildAnimals</xpath>
					<value>
						<MorrowRim_TrollBoomer>0.05</MorrowRim_TrollBoomer>
						<MorrowRim_TrollBarren>0.05</MorrowRim_TrollBarren>
						<MorrowRim_TrollPygmy>0.05</MorrowRim_TrollPygmy>
						<MorrowRim_TrollHill>0.03</MorrowRim_TrollHill>

					</value>			
				</li>

				<!-- Volcano -->
			
				<li Class="PatchOperationAdd">
					<xpath>/Defs/BiomeDef[defName="Volcano"]/wildAnimals</xpath>
					<value>
						<MorrowRim_TrollHill>0.07</MorrowRim_TrollHill>
					</value>			
				</li>

				<!-- Wetland -->
			
				<li Class="PatchOperationAdd">
					<xpath>/Defs/BiomeDef[defName="Wetland"]/wildAnimals</xpath>
					<value>
						<MorrowRim_TrollSwamp>0.06</MorrowRim_TrollSwamp>
						<MorrowRim_TrollRiver>0.03</MorrowRim_TrollRiver>
						<MorrowRim_TrollPygmy>0.03</MorrowRim_TrollPygmy>
						<MorrowRim_TrollBoomer>0.03</MorrowRim_TrollBoomer>
					</value>				
				</li>

			</operations>
		</match>
	</Operation>
		
</Patch>

