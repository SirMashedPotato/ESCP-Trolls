<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Biomes! Islands</li>
		</mods> 
				
		<match Class="PatchOperationSequence">
			<operations>
			
				<!-- BiomesIslands_Atoll -->
			
				<li Class="PatchOperationAdd">
					<xpath>/Defs/BiomeDef[defName="BiomesIslands_Atoll"]/wildAnimals</xpath>
					<value>
						<MorrowRim_TrollPygmy>0.05</MorrowRim_TrollPygmy>
					</value>			
				</li>	
				
				<!-- BiomesIslands_BorealIsland -->
			
				<li Class="PatchOperationAdd">
					<xpath>/Defs/BiomeDef[@Name="BiomesIslands_BorealIslandBase"]/wildAnimals</xpath>
					<value>
						<MorrowRim_TrollForest>0.07</MorrowRim_TrollForest>
						<MorrowRim_TrollFrost>0.04</MorrowRim_TrollFrost>
						<MorrowRim_TrollUdyrfrykte>0.02</MorrowRim_TrollUdyrfrykte>
						<MorrowRim_TrollGehenoth>0.02</MorrowRim_TrollGehenoth>
					</value>			
				</li>	
				
				<!-- BiomesIslands_DesertIsland -->
			
				<li Class="PatchOperationAdd">
					<xpath>/Defs/BiomeDef[@Name="BiomesIslands_DesertIslandBase"]/wildAnimals</xpath>
					<value>
						<MorrowRim_TrollBarren>0.07</MorrowRim_TrollBarren>
					</value>			
				</li>
				
				<!-- BiomesIslands_TemperateIsland -->
			
				<li Class="PatchOperationAdd">
					<xpath>/Defs/BiomeDef[@Name="BiomesIslands_TemperateIslandBase"]/wildAnimals</xpath>
					<value>
						<MorrowRim_TrollBoomer>0.07</MorrowRim_TrollBoomer>
						<MorrowRim_TrollForest>0.07</MorrowRim_TrollForest>
						<MorrowRim_TrollUdyrfrykte>0.02</MorrowRim_TrollUdyrfrykte>
					</value>			
				</li>	
				
				<!-- BiomesIslands_TropicalIsland -->
			
				<li Class="PatchOperationAdd">
					<xpath>/Defs/BiomeDef[@Name="BiomesIslands_TropicalIslandBase"]/wildAnimals</xpath>
					<value>
						<MorrowRim_TrollBoomer>0.07</MorrowRim_TrollBoomer>
						<MorrowRim_TrollPygmy>0.07</MorrowRim_TrollPygmy>
						<MorrowRim_TrollFungal>0.05</MorrowRim_TrollFungal>
					</value>			
				</li>
				
				<!-- BiomesIslands_TundraIsland -->
			
				<li Class="PatchOperationAdd">
					<xpath>/Defs/BiomeDef[@Name="BiomesIslands_TundraIslandBase"]/wildAnimals</xpath>
					<value>
						<MorrowRim_TrollFrost>0.07</MorrowRim_TrollFrost>
						<MorrowRim_TrollUdyrfrykte>0.02</MorrowRim_TrollUdyrfrykte>
						<MorrowRim_TrollGehenoth>0.02</MorrowRim_TrollGehenoth>
					</value>			
				</li>
			
			</operations>
		</match>
	</Operation>
		
</Patch>

