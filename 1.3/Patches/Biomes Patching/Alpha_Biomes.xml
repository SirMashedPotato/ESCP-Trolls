<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Alpha Biomes</li>
		</mods> 
				
		<match Class="PatchOperationSequence">
			<operations>
			
				<!-- AB_FeraliskInfestedJungle -->
			
				<li Class="PatchOperationAdd">
					<xpath>/Defs/BiomeDef[defName="AB_FeraliskInfestedJungle"]/wildAnimals</xpath>
					<value>
						<MorrowRim_TrollPygmy>0.05</MorrowRim_TrollPygmy>
						<MorrowRim_TrollFungal>0.05</MorrowRim_TrollFungal>
					</value>			
				</li>	
				<!-- AB_GallatrossGraveyard -->
			
				<li Class="PatchOperationAdd">
					<xpath>/Defs/BiomeDef[defName="AB_GallatrossGraveyard"]/wildAnimals</xpath>
