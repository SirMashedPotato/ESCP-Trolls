						<MorrowRim_TrollUdyrfrykte>0.01</MorrowRim_TrollUdyrfrykte>
					</value>			
				</li>
				
				<!-- AB_TarPits -->
			
				<li Class="PatchOperationAdd">
					<xpath>/Defs/BiomeDef[defName="AB_TarPits"]/wildAnimals</xpath>
					<value>
						<MorrowRim_TrollBarren>0.05</MorrowRim_TrollBarren>
						<MorrowRim_TrollSwamp>0.05</MorrowRim_TrollSwamp>
					</value>			
				</li>

			</operations>
		</match>
	</Operation>
		
